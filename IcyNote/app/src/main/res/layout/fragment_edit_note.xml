<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="icynote.ui.EditNote">

    <include layout="@layout/menu_button" />

    <EditText
        android:id="@+id/noteDisplayTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="end"
        android:textStyle="normal|bold"
        android:textSize="@dimen/titleSize"
        android:hint="@string/noteDisplayTitleHint"
        android:textColorHint="@color/hintColor"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:id="@+id/note_open_metadata"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:alpha="0.5"
        android:src="@drawable/note_open_metadata"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/noteDisplaySettingsButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/note_open_metadata"
        android:alpha="0"
        android:onClick="openSettings"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <icynote.ui.TagEditText
        android:id="@+id/noteDisplayTagsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:gravity="center|start"
        android:layout_alignParentBottom="true"
        android:hint="@string/noteDisplayTagHint"
        android:textColorHint="@color/hintColor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/noteDisplayBodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:lines="99"
        android:gravity="top|start"
        android:scrollbars="vertical"
        android:hint="@string/noteDisplayTextHint"
        android:textColorHint="@color/hintColor"
        android:layout_below="@+id/noteDisplayTitleText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/noteDisplayTagsText" />


</RelativeLayout>
